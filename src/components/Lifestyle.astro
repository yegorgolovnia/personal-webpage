    <div class="header">
        <h2>Lifestyle</h2>
        <span class="mono">/api_streams</span>
    </div>

    <div class="grid">
        <!-- Spotify Cube -->
        <div class="cube-container spotify-cube" data-total={spotifyPlaylists.length + 1}>
            <div class="cube-wrapper">
                <div class="cube">
                    {spotifyPlaylists.map((playlist, index) => (
                        <a href={playlist.link} target="_blank" class="face spotify" style={`--i: ${index}`}>
                            <div class="icon-header">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M9 18V5l12-2v13"></path>
                                    <circle cx="6" cy="18" r="3"></circle>
                                    <circle cx="18" cy="16" r="3"></circle>
                                </svg>
                                <span class="mono">Spotify / {playlist.label}</span>
                            </div>
                            <div class="content">
                                <div class="art"><div class="disc"></div></div>
                                <div class="info">
                                    <span class="playlist-name">{playlist.month}</span>
                                    <span class="curated-by mono">Curated by Yegor</span>
                                </div>
                            </div>
                            <div class="status mono">
                                {index === 0 && <span class="pulse"></span>}
                                {index === 0 ? "Listening to..." : "Archived"}
                            </div>
                        </a>
                    ))}
                    
                    <!-- Spotify Profile Card -->
                    <a href="https://open.spotify.com/user/22vwofsgpsjmnw5gzow7pi5ly?si=d1d7580cd8b3469e" target="_blank" class="face spotify profile-card" style={`--i: ${spotifyPlaylists.length}`}>
                         <div class="icon-header">
                            <span class="mono">Spotify / Profile</span>
                        </div>
                        <div class="center-msg mono">
                            <span>Follow me on Spotify ↗</span>
                        </div>
                    </a>

                    <!-- Dummy Face for Bottom Glance -->
                    <div class="face spotify dummy-face" style={`--i: ${spotifyPlaylists.length + 1}`}></div>
                </div>
            </div>
        </div>

        <!-- Strava Cube -->
        <div class="cube-container strava-cube" data-total={activities.length + 1}>
            <div class="cube-wrapper">
                <div class="cube">
                    {activities.length > 0 ? (
                        <>
                            {activities.map((activity: any, index: number) => (
                                 <a href={`https://www.strava.com/activities/${activity.id}`} target="_blank" class="face strava" style={`--i: ${index}`}>
                                    <div class="icon-header">
                                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <circle cx="12" cy="12" r="10"></circle>
                                            <polyline points="12 6 12 12 16 14"></polyline>
                                        </svg>
                                        <span class="mono">Strava / Workout</span>
                                    </div>
                                    <div class="content">
                                        <div class="activity-meta">
                                            <span class="type-large">{activity.type}</span>
                                            <span class="date mono">
                                                {activity.start_date ? new Date(activity.start_date).toLocaleDateString(undefined, {month:'short', day:'numeric'}) : ''}
                                            </span>
                                        </div>
                                        <div class="stat-row">
                                            <div>
                                                <span class="label mono">{getActivityStats(activity).label1}</span>
                                                <div class="val">{getActivityStats(activity).val1}</div>
                                            </div>
                                            <div>
                                                <span class="label mono">{getActivityStats(activity).label2}</span>
                                                <div class="val">{getActivityStats(activity).val2}</div>
                                            </div>
                                        </div>
                                    </div>
                                     <div class="status mono">
                                        {index === 0 && <span class="pulse"></span>}
                                        {index === 0 ? "Latest Activity" : "Past Activity"}
                                    </div>
                                </a>
                            ))}
                            
                            <!-- Profile Card as the Last Face -->
                            <a href="https://www.strava.com/athletes/yegorgolovnia" target="_blank" class="face strava profile-card" style={`--i: ${activities.length}`}>
                                 <div class="icon-header">
                                    <span class="mono">Strava / Profile</span>
                                </div>
                                <div class="center-msg mono">
                                    <span>Follow me on Strava ↗</span>
                                </div>
                            </a>

                            <!-- Dummy Face for Bottom Glance -->
                            <div class="face strava dummy-face" style={`--i: ${activities.length + 1}`}></div>
                        </>
                    ) : (
                        <div class="face strava empty" style="--i: 0">
                            <span class="mono">No data available</span>
                        </div>
                    )}
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    :root {
        --cube-height: 190px;
        --cube-depth: 190px; 
        --cube-radius: 95px; /* height / 2 */
    }

    #lifestyle { padding: 4rem 0; }
    .header {
        display: flex; align-items: baseline; gap: 1rem; margin-bottom: 3rem;
        border-bottom: 1px solid var(--color-accent-subtle); padding-bottom: 1rem;
    }
    .mono { font-family: var(--font-mono); color: var(--color-text-muted); font-size: 0.85rem; }
    .grid { display: grid; grid-template-columns: 1fr; gap: 4rem; }

    /* CUBE CONTAINER */
    .cube-container {
        height: 190px; /* var(--cube-height) */
        perspective: 1000px;
        position: relative;
        cursor: grab;
        /* Ensure we don't overflow horizontally during rotation */
        overflow: visible; 
        z-index: 1;
    }
    .cube-container:hover {
        z-index: 10; /* Bring to front on interaction */
    }
    .cube-container:active { cursor: grabbing; }

    /* ROTATION WRAPPER (Controlled by Scroll/JS) */
    .cube-wrapper {
        width: 100%;
        height: 100%;
        position: relative;
        transform-style: preserve-3d;
        transition: transform 0.6s cubic-bezier(0.2, 0.8, 0.2, 1);
        transform-origin: center center;
    }

    /* TILT WRAPPER (Controlled by Hover/CSS) */
    .cube {
        width: 100%;
        height: 100%;
        position: relative;
        transform-style: preserve-3d;
        transition: transform 0.4s cubic-bezier(0.2, 0.8, 0.2, 1);
        transform: rotateX(0deg);
        transform-origin: center center;
    }

    /* Hover Tilt Effect: 
       - First card: 20deg
       - Others: 10deg 
    */
    .cube-container.first-card:hover .cube {
        transform: rotateX(20deg);
    }
    .cube-container:not(.first-card):hover .cube {
        transform: rotateX(10deg);
    }

    /* Hover Border Colors - Only on the ACTIVE face */
    .spotify-cube:hover .face.active-face { border-color: #1DB954; }
    .strava-cube:hover .face.active-face { border-color: #FC4C02; }

    /* FACE STYLING */
    .face {
        position: absolute;
        width: 100%;
        height: 100%;
        background: #000000; /* Solid black */
        border: 1px solid var(--color-accent-subtle);
        border-radius: 12px;
        padding: 1.25rem;
        box-sizing: border-box;
        display: flex; flex-direction: column; 
        text-decoration: none;
        color: inherit;
        backface-visibility: hidden; 
        overflow: hidden; 
        
        transform: rotateX(calc(var(--i) * -90deg)) translateZ(95px);
        box-shadow: inset 0 0 40px rgba(255,255,255,0.02);
        
        transition: opacity 0.3s ease, visibility 0.3s ease, border-color 0.3s ease;
    }
    .face.hidden-face {
        opacity: 0;
        visibility: hidden;
    }
    .dummy-face {
        pointer-events: none; 
    }

    /* Data Specifics */
    .spotify .content { 
        display: flex; 
        flex-direction: row; 
        align-items: center; 
        /* Center in the available space */
        flex-grow: 1;
        transform: translateY(-5px); /* Optical center */
    }
    .art { width: 56px; height: 56px; background: #333; border-radius: 4px; position: relative; overflow: hidden; margin-right: 1.25rem; flex-shrink: 0; }
    .disc { width: 100%; height: 100%; background: conic-gradient(from 0deg, #333, #666); border-radius: 50%; animation: spin 4s linear infinite; }
    @keyframes spin { 100% { transform: rotate(360deg); } }

    .spotify .info {
        display: flex; flex-direction: column; justify-content: center;
    }
    .spotify .playlist-name {
        font-size: 1.5rem; font-weight: 700; line-height: 1.1; letter-spacing: -0.02em;
        margin-bottom: 0.25rem;
    }
    .spotify .curated-by {
        font-size: 0.75rem; color: var(--color-text-muted); text-transform: uppercase; letter-spacing: 0.05em;
    }

    .strava .activity-meta {
        display: flex; align-items: baseline; justify-content: flex-start; gap: 0.8rem; width: 100%; margin-bottom: 0;
    }
    .strava .type-large { font-size: 1.5rem; font-weight: 700; color: #FC4C02; letter-spacing: -0.02em; }
    .strava .date { font-size: 0.85rem; color: var(--color-text-muted); }
    
    .stat-row { display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem; margin-top: 0; }
    .label { font-size: 0.65rem; text-transform: uppercase; letter-spacing: 0.05em; display: block; margin-bottom: 0.25rem; color: var(--color-text-muted); }
    .val { font-size: 1.15rem; font-weight: 600; letter-spacing: -0.02em; }
    
    .strava .content {
        flex-grow: 1; 
        display: flex; 
        flex-direction: column; 
        justify-content: center; /* Back to center */
        padding-top: 0;          
        gap: 0.75rem;            /* Moderate gap */
    }

    .icon-header { display: flex; align-items: center; gap: 0.8rem; color: var(--color-text); margin-bottom: 0; height: 24px; }
    
    /* Footer Status absolute positioning for consistency */
    .status { 
        position: absolute; bottom: 1.2rem; left: 1.25rem;
        display: flex; align-items: center; gap: 0.5rem; font-size: 0.75rem; color: var(--color-text-muted);
    }
    .pulse { width: 6px; height: 6px; border-radius: 50%; animation: pulse 2s infinite; }
    .spotify .pulse { background: #1DB954; box-shadow: 0 0 5px #1DB954; }
    .strava .pulse { background: #FC4C02; box-shadow: 0 0 5px #FC4C02; }
    @keyframes pulse { 0% { opacity: 1; } 50% { opacity: 0.5; } 100% { opacity: 1; } }
    
    .center-msg { display: flex; align-items: center; justify-content: center; height: 100%; font-size: 1.2rem; }
    
    /* Specific Profile Card Borders */
    .spotify-cube .profile-card { border-color: #1DB954; }
    .strava-cube .profile-card { border-color: #FC4C02; }

    /* When a face is "active" or near active, maybe we highlight it? 
       Actually, backface-visibility handles the hiding. 
    */

    @media (min-width: 768px) {
        .grid { grid-template-columns: repeat(2, 1fr); }
    }
</style>

<script>
    // Debounce function
    function debounce(func: Function, wait: number) {
        let timeout: ReturnType<typeof setTimeout>;
        return function executedFunction(...args: any[]) {
            const later = () => {
                clearTimeout(timeout);
                func(...args);
            };
            clearTimeout(timeout);
            timeout = setTimeout(later, wait);
        };
    }

    const containers = document.querySelectorAll('.cube-container');

    containers.forEach(container => {
        // We rotate the WRAPPER now, not the inner cube (which handles tilt)
        const rotator = container.querySelector('.cube-wrapper') as HTMLElement;
        if (!rotator) return;

        const totalFaces = parseInt(container.getAttribute('data-total') || '1');
        const faces = container.querySelectorAll('.face');

        let currentIndex = 0;
        let isScrolling = false;
        let scrollTimeout: ReturnType<typeof setTimeout>;

        // Function to hide faces that are "far away" to prevent z-fighting/overlap
        const updateVisibility = (index: number) => {
            faces.forEach((face, i) => {
                // Toggle active-face for specific border styling
                if (i === index) {
                    face.classList.add('active-face');
                } else {
                    face.classList.remove('active-face');
                }

                // Show current, previous (-1), and next (+1) for smooth tilt/scroll
                if (Math.abs(i - index) <= 1) {
                    face.classList.remove('hidden-face');
                } else {
                    face.classList.add('hidden-face');
                }
            });
            
            // Set first-card class for tilt logic
            if (index === 0) {
                container.classList.add('first-card');
            } else {
                container.classList.remove('first-card');
            }
        };

        // Initial state
        updateVisibility(0);
        container.classList.toggle('first-card', currentIndex === 0);


        container.addEventListener('wheel', (e) => {
            const wheelEvent = e as WheelEvent;
            // Prevent default page scroll to allow interaction
            wheelEvent.preventDefault();

            // Simple debounce/throttle logic
            if (isScrolling) return;

            // Threshold
            if (Math.abs(wheelEvent.deltaY) < 10) return;

            isScrolling = true;

            const direction = wheelEvent.deltaY > 0 ? 1 : -1;
            const newIndex = currentIndex + direction;

            // Clamp: 0 to totalFaces - 1
            if (newIndex >= 0 && newIndex < totalFaces) {
                currentIndex = newIndex;
                const rotation = currentIndex * 90;
                rotator.style.transform = `rotateX(${rotation}deg)`;
                
                // Update visibility
                updateVisibility(currentIndex);
            }

            // Lock for 500ms
            clearTimeout(scrollTimeout);
            scrollTimeout = setTimeout(() => {
                isScrolling = false;
            }, 500); 

        }, { passive: false });
    });
</script>
