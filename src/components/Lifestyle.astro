        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
        opacity: 0.5;
    }

    @keyframes pulse {
        0% {
            opacity: 1;
        }
        50% {
            opacity: 0.5;
        }
        100% {
            opacity: 1;
        }
    }

    @media (min-width: 768px) {
        .grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 2rem;
        }
    }
</style>

<script>
    // --- SPOTIFY INTERACTION (Scroll to Rotate) ---
    const spotifyScene = document.querySelector(".spotify-scene");
    if (spotifyScene) {
        const prism = spotifyScene.querySelector(".prism") as HTMLElement;
        let spotifyRotation = 0;

        spotifyScene.addEventListener(
            "wheel",
            (e: WheelEvent) => {
                e.preventDefault();
                // Scroll Down (+DeltaY) -> Rotate upwards (Negative Angle) to show next face (face 1 is below face 0)
                // NO: Face 1 is at -72deg. So we need to DECREASE angle to go to 1. 0 -> -72.
                // So +DeltaY (Scroll Down) should Decrease Rotation.

                // Debounce or just accumulate? Accumulating fits "every turn" naturally.
                // Let's use steps of 72deg.
                const direction = e.deltaY > 0 ? -1 : 1;
                spotifyRotation += direction * 72;

                prism.style.transform = `rotateX(${spotifyRotation}deg)`;
            },
            { passive: false },
        );
    }

    // --- STRAVA INTERACTION (Auto Rotate) ---
    const stravaScene = document.querySelector(".strava-scene");
    if (stravaScene) {
        const prism = stravaScene.querySelector(".prism") as HTMLElement;
        let stravaRotation = 0;

        // Auto-rotate every 3.5 seconds
        setInterval(() => {
            // Unidirectional rotation (show next activity)
            // Face 1 is at -72deg. So we subtract 72.
            stravaRotation -= 72;
            prism.style.transform = `rotateX(${stravaRotation}deg)`;
        }, 3500);
    }
</script>
