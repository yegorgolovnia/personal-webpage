<script>
    // @ts-nocheck
    const prefersReducedMotion = window.matchMedia("(prefers-reduced-motion: reduce)").matches;
    const cubeControllers = new WeakMap();

    function setupCube(container) {
        if (cubeControllers.has(container)) return cubeControllers.get(container);

        const rotator = container.querySelector('.cube-wrapper');
        if (!rotator) return null;

        let currentIndex = 0;
        let isScrolling = false;
        let scrollTimeout;

        const getFaces = () => container.querySelectorAll('.face');
        const getTotalFaces = () => parseInt(container.getAttribute('data-total') || '1');

        const updateVisibility = (index) => {
            const faces = getFaces();
            faces.forEach((face, i) => {
                if (i === index) {
                    face.classList.add('active-face');
                } else {
                    face.classList.remove('active-face');
                }

                if (Math.abs(i - index) <= 1) {
                    face.classList.remove('hidden-face');
                } else {
                    face.classList.add('hidden-face');
                }
            });

            if (index === 0) {
                container.classList.add('first-card');
            } else {
                container.classList.remove('first-card');
            }
        };

        const reset = () => {
            currentIndex = 0;
            rotator.style.transform = `rotateX(0deg)`;
            updateVisibility(0);
        };

        const handleInteraction = (direction) => {
            if (isScrolling) return;
            isScrolling = true;

            const totalFaces = getTotalFaces();
            const newIndex = currentIndex + direction;

            if (newIndex >= 0 && newIndex < totalFaces) {
                currentIndex = newIndex;
                const rotation = currentIndex * 90;
                rotator.style.transform = `rotateX(${rotation}deg)`;
                updateVisibility(currentIndex);
            }

            clearTimeout(scrollTimeout);
            scrollTimeout = setTimeout(() => {
                isScrolling = false;
            }, 500);
        };

        container.addEventListener('wheel', (e) => {
            if (prefersReducedMotion) return;
            const wheelEvent = e;
            wheelEvent.preventDefault();
            if (Math.abs(wheelEvent.deltaY) < 10) return;
            const direction = wheelEvent.deltaY > 0 ? 1 : -1;
            handleInteraction(direction);
        }, { passive: false });

        let touchStartY = 0;
        let lastInteractionTime = 0;

        container.addEventListener('touchstart', (e) => {
            touchStartY = e.touches[0].clientY;
        }, { passive: false });

        container.addEventListener('touchmove', (e) => {
            if (prefersReducedMotion) return;
            e.preventDefault();
            const touchCurrentY = e.touches[0].clientY;
            const swipeDistance = touchStartY - touchCurrentY;
            const minSwipeDistance = 40;

            const now = Date.now();
            if (now - lastInteractionTime < 300) return;

            if (Math.abs(swipeDistance) > minSwipeDistance) {
                const direction = swipeDistance > 0 ? 1 : -1;
                handleInteraction(direction);
                touchStartY = touchCurrentY;
                lastInteractionTime = now;
            }
        }, { passive: false });

        container.addEventListener('touchend', () => {}, { passive: false });

        const controller = { reset };
        cubeControllers.set(container, controller);
        reset();
        return controller;
    }

    function escapeHtml(value) {
        return String(value)
            .replace(/&/g, "&amp;")
            .replace(/</g, "&lt;")
            .replace(/>/g, "&gt;")
            .replace(/"/g, "&quot;")
            .replace(/'/g, "&#039;");
    }

    function formatDuration(seconds) {
        const h = Math.floor(seconds / 3600);
        const m = Math.floor((seconds % 3600) / 60);
        const s = seconds % 60;
        if (h > 0) return `${h}h ${m}m`;
        return `${m}m ${s}s`;
    }

    function formatPace(time, distance, isSwim = false) {
        let pace;
        if (isSwim) {
            pace = (time / 60) / (distance / 100);
        } else {
            pace = (time / 60) / (distance / 1000);
        }
        const paceMins = Math.floor(pace);
        const paceSecs = Math.round((pace - paceMins) * 60);
        return `${paceMins}:${paceSecs.toString().padStart(2, '0')}`;
    }

    function formatSpeed(time, distance) {
        const speedMps = distance / time;
        const speedKmh = speedMps * 3.6;
        return speedKmh.toFixed(1);
    }

    function getActivityStats(activity) {
        if (!activity) return { label1: '-', val1: '-', label2: '-', val2: '-' };

        const type = activity.type;
        const isRun = type === 'Run' || type === 'Walk' || type === 'Hike';
        const isRide = type === 'Ride' || type === 'VirtualRide';
        const isSwim = type === 'Swim';

        let burnVal = 0;
        if (activity.calories) {
            burnVal = Math.round(activity.calories);
        }

        const distKm = (activity.distance / 1000).toFixed(2);
        const timeStr = formatDuration(activity.moving_time);

        let stats = {
            label1: 'Time',
            val1: timeStr,
            label2: 'Burn',
            val2: burnVal > 0 ? `${burnVal}kcal` : '-'
        };

        if (isRun) {
            stats = {
                label1: 'Dist',
                val1: `${distKm}km`,
                label2: burnVal > 0 ? 'Burn' : 'Pace',
                val2: burnVal > 0 ? `${burnVal}kcal` : `${formatPace(activity.moving_time, activity.distance)}/km`
            };
        } else if (isRide) {
            stats = {
                label1: 'Dist',
                val1: `${distKm}km`,
                label2: burnVal > 0 ? 'Burn' : 'Speed',
                val2: burnVal > 0 ? `${burnVal}kcal` : `${formatSpeed(activity.moving_time, activity.distance)}km/h`
            };
        } else if (isSwim) {
            stats = {
                label1: 'Dist',
                val1: `${(activity.distance).toFixed(0)}m`,
                label2: burnVal > 0 ? 'Burn' : 'Pace',
                val2: burnVal > 0 ? `${burnVal}kcal` : `${formatPace(activity.moving_time, activity.distance, true)}/100m`
            };
        }

        return stats;
    }

    function renderStravaFaces(activities) {
        if (!activities || activities.length === 0) {
            return `<div class="face strava empty" style="--i: 0"><span class="mono">No data available</span></div>`;
        }

        const activityFaces = activities.map((activity, index) => {
            const stats = getActivityStats(activity);
            const date = activity.start_date ? new Date(activity.start_date).toLocaleDateString(undefined, { month: 'short', day: 'numeric' }) : '';
            const type = escapeHtml(activity.type || 'Activity');
            const stat1 = escapeHtml(stats.label1);
            const stat1Val = escapeHtml(stats.val1);
            const stat2 = escapeHtml(stats.label2);
            const stat2Val = escapeHtml(stats.val2);

            return `
                <a href="https://www.strava.com/activities/${activity.id}" target="_blank" rel="noopener noreferrer" class="face strava" style="--i: ${index}">
                    <div class="icon-header">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"></circle>
                            <polyline points="12 6 12 12 16 14"></polyline>
                        </svg>
                        <span class="mono">Strava / Workout</span>
                    </div>
                    <div class="content">
                        <div class="activity-meta">
                            <span class="type-large">${type}</span>
                            <span class="date mono">${escapeHtml(date)}</span>
                        </div>
                        <div class="stat-row">
                            <div>
                                <span class="label mono">${stat1}</span>
                                <div class="val">${stat1Val}</div>
                            </div>
                            <div>
                                <span class="label mono">${stat2}</span>
                                <div class="val">${stat2Val}</div>
                            </div>
                        </div>
                    </div>
                    <div class="status mono">
                        ${index === 0 ? '<span class="pulse"></span>' : ''}
                        ${index === 0 ? 'Latest Activity' : 'Past Activity'}
                    </div>
                </a>
            `;
        }).join('');

        const profileIndex = activities.length;
        const dummyIndex = activities.length + 1;

        const profileFace = `
            <a href="https://www.strava.com/athletes/yegorgolovnia" target="_blank" rel="noopener noreferrer" class="face strava profile-card" style="--i: ${profileIndex}">
                <div class="icon-header">
                    <span class="mono">Strava / Profile</span>
                </div>
                <div class="center-msg mono">
                    <span>Follow me on Strava ↗</span>
                </div>
            </a>
        `;

        const dummyFace = `<div class="face strava dummy-face" style="--i: ${dummyIndex}"></div>`;

        return activityFaces + profileFace + dummyFace;
    }

    async function refreshStrava() {
        try {
            const res = await fetch('/api/strava.json');
            if (!res.ok) throw new Error('Failed to fetch Strava');
            const data = await res.json();
            const activities = Array.isArray(data) ? data.slice(0, 5) : [];

            const container = document.querySelector('.strava-cube');
            if (!container) return;

            const cube = container.querySelector('.cube');
            if (!cube) return;

            container.setAttribute('data-total', String(activities.length + 1));
            cube.innerHTML = renderStravaFaces(activities);

            const controller = setupCube(container);
            if (controller) controller.reset();
        } catch (err) {
            // Keep existing content if fetch fails
            console.warn('Strava refresh failed', err);
        }
    }

    document.querySelectorAll('.cube-container').forEach(container => {
        setupCube(container);
    });

    refreshStrava();
    setInterval(refreshStrava, 30 * 60 * 1000);
</script>
