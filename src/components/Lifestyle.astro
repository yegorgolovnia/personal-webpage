    /* CUBE CONTAINER */
    .cube-container {
        height: var(--cube-height);
        perspective: 1000px;
        position: relative;
        cursor: grab;
        /* Ensure we don't overflow horizontally during rotation */
        overflow: visible; 
        z-index: 1;
        touch-action: none; /* Prevent browser handling of gestures */
    }
    .cube-container:hover {
        z-index: 10; /* Bring to front on interaction */
    }
    .cube-container:active { cursor: grabbing; }

    /* ROTATION WRAPPER (Controlled by Scroll/JS) */
    .cube-wrapper {
        width: 100%;
        height: 100%;
        position: relative;
        transform-style: preserve-3d;
        transition: transform 0.6s cubic-bezier(0.2, 0.8, 0.2, 1);
        transform-origin: center center;
    }

    /* TILT WRAPPER (Controlled by Hover/CSS) */
    .cube {
        width: 100%;
        height: 100%;
        position: relative;
        transform-style: preserve-3d;
        transition: transform 0.4s cubic-bezier(0.2, 0.8, 0.2, 1);
        transform: rotateX(0deg);
        transform-origin: center center;
    }

    /* Hover Tilt Effect: 
       - First card: 20deg
       - Others: 10deg 
    */
    .cube-container.first-card:hover .cube {
        transform: rotateX(20deg);
    }
