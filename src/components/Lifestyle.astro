---
import { getLatestActivity } from '../lib/strava';

const stravaActivities = await getLatestActivity();
const activities = Array.isArray(stravaActivities) ? stravaActivities : [];

function formatTime(seconds: number) {
    const mins = Math.floor(seconds / 60);
    const secs = seconds % 60;
    return `${mins}:${secs.toString().padStart(2, '0')}`;
}

function formatPace(time: number, distance: number) {
    const minutes = time / 60;
    const km = distance / 1000;
    const pace = minutes / km;
    const paceMins = Math.floor(pace);
    const paceSecs = Math.round((pace - paceMins) * 60);
    return `${paceMins}:${paceSecs.toString().padStart(2, '0')}`;
}
---
<section id="lifestyle">
    <div class="header">
        <h2>Lifestyle</h2>
        <span class="mono">/api_streams</span>
    </div>

    <div class="grid">
        <!-- Spotify Card -->
        <a href="https://open.spotify.com/playlist/01QytP6FU4AvHMPM9uzFIZ?si=17a95ef6b9c046fa" target="_blank" rel="noopener noreferrer" class="card spotify link-card">
            <div class="icon-header">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M9 18V5l12-2v13"></path>
                    <circle cx="6" cy="18" r="3"></circle>
                    <circle cx="18" cy="16" r="3"></circle>
                </svg>
                <span class="mono">Spotify / Feb '26 Rotation</span>
            </div>
            <div class="content">
                <div class="art">
                    <div class="disc"></div>
                </div>
                <div class="info">
                    <strong>Feb '26</strong>
                    <span class="artist mono">Playlist by Yegor</span>
                </div>
            </div>
            <div class="status mono">
                <span class="pulse"></span> Listening
            </div>
        </a>

        <!-- Strava Card (List) -->
        <div class="card strava-list">
            <div class="icon-header">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
                <span class="mono">Strava / Recent Activity</span>
            </div>

            <div class="activity-list">
                {activities.length > 0 ? activities.map((activity: any) => (
                    <div class="activity-item">
                        <div class="activity-meta">
                            <span class="date mono">{new Date(activity.start_date).toLocaleDateString(undefined, {month:'short', day:'numeric'})}</span>
                            <span class="type mono">{activity.type}</span>
                        </div>
                        <div class="stat-grid small">
                            <div>
                                <span class="label mono">Dist</span>
                                <div class="val">{(activity.distance / 1000).toFixed(2)}km</div>
                            </div>
                            <div>
                                <span class="label mono">Pace</span>
                                <div class="val">{formatPace(activity.moving_time, activity.distance)}/km</div>
                            </div>
                        </div>
                    </div>
                )) : (
                    <div class="empty-state mono">No recent activities found (or token invalid).</div>
                )}
            </div>
        </div>
    </div>
</section>

<style>
    #lifestyle {
        padding: 4rem 0;
    }

    .header {
        display: flex;
        align-items: baseline;
        gap: 1rem;
        margin-bottom: 3rem;
        border-bottom: 1px solid var(--color-accent-subtle);
        padding-bottom: 1rem;
    }

    .mono {
        font-family: var(--font-mono);
        color: var(--color-text-muted);
        font-size: 0.85rem;
    }

    .grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    .card {
        border: 1px solid var(--color-accent-subtle);
        padding: 1.5rem;
        border-radius: 8px;
        background: rgba(255,255,255,0.02);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        min-height: 200px;
        transition: all 0.2s ease;
    }

    .link-card {
        text-decoration: none;
        color: inherit;
        cursor: pointer;
    }

    .link-card:hover {
        background: rgba(255,255,255,0.05);
        border-color: var(--color-accent);
        transform: translateY(-2px);
    }

    .icon-header {
        display: flex;
        align-items: center;
        gap: 0.8rem;
        margin-bottom: 1.5rem;
        color: var(--color-text);
    }

    .content {
        flex-grow: 1;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    /* Spotify Specifics */
    .art {
        width: 60px;
        height: 60px;
        background: #333;
        border-radius: 4px;
        position: relative;
        overflow: hidden;
    }
    
    .disc {
        width: 100%;
        height: 100%;
        background: conic-gradient(from 0deg, #333, #666);
        border-radius: 50%;
        animation: spin 4s linear infinite;
    }

    @keyframes spin { 100% { transform: rotate(360deg); } }

    .info {
        display: flex;
        flex-direction: column;
    }

    .status {
        margin-top: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.75rem;
    }

    .pulse {
        width: 8px;
        height: 8px;
        background: #1DB954; /* Spotify Green */
        border-radius: 50%;
        box-shadow: 0 0 5px #1DB954;
        animation: pulse 2s infinite;
    }
    .strava .pulse { background: #FC4C02; box-shadow: 0 0 5px #FC4C02; }

    @keyframes pulse {
        0% { opacity: 1; }
        50% { opacity: 0.5; }
        100% { opacity: 1; }
    }

    /* Strava Specifics */
    .strava-list {
        max-height: 400px;
        display: flex;
        flex-direction: column;
    }

    .activity-list {
        overflow-y: auto;
        padding-right: 0.5rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    /* Custom Scrollbar */
    .activity-list::-webkit-scrollbar {
        width: 4px;
    }
    .activity-list::-webkit-scrollbar-track {
        background: rgba(255,255,255,0.02);
    }
    .activity-list::-webkit-scrollbar-thumb {
        background: var(--color-accent-subtle);
        border-radius: 4px;
    }

    .activity-item {
        padding: 1rem;
        background: rgba(255,255,255,0.03);
        border-radius: 4px;
        border: 1px solid transparent;
        transition: border-color 0.2s;
    }

    .activity-item:hover {
        border-color: var(--color-accent-subtle);
    }

    .activity-meta {
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.8rem;
        border-bottom: 1px solid rgba(255,255,255,0.05);
        padding-bottom: 0.5rem;
    }

    .date { color: var(--color-text-muted); font-size: 0.8rem; }
    .type { color: #FC4C02; font-size: 0.8rem; font-weight: bold; }

    .stat-grid.small {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0.5rem;
    }
    
    .stat-grid.small .val {
        font-size: 1rem;
    }

    @media (min-width: 768px) {
        .grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
</style>
