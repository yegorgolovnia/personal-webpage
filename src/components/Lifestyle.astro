<style>
    #lifestyle { padding: 4rem 0; }
    .header {
        display: flex; align-items: baseline; gap: 1rem; margin-bottom: 3rem;
        border-bottom: 1px solid var(--color-accent-subtle); padding-bottom: 1rem;
    }
    .mono { font-family: var(--font-mono); color: var(--color-text-muted); font-size: 0.85rem; }
    .op-50 { opacity: 0.5; }
    .grid { display: grid; grid-template-columns: 1fr; gap: 2rem; }

    .prism-scene {
        perspective: 1000px;
        height: 220px;
        position: relative; /* Ensure z-index works contextually */
    }

    .prism-scene:hover {
        z-index: 10; /* FIX: Bring current card above siblings to avoid border overlap issues */
    }

    .prism {
        width: 100%;
        height: 100%;
        position: relative;
        transform-style: preserve-3d;
        transition: transform 0.6s cubic-bezier(0.2, 0.8, 0.2, 1);
        transform-origin: 50% 50% -110px; /* -Depth/2 approx */
    }

    .prism-scene:hover .prism {
        /* Glimpse/Tilt Effect - only 20deg to show "direction" */
        transform: rotateX(20deg);
        animation: bump 0.4s cubic-bezier(0.2, 0.8, 0.2, 1);
    }
    
    /* Flipped State (via Scroll) - Overrides hover glimpse */
    .prism-scene:hover .prism.flipped, .prism.flipped {
        transform: rotateX(90deg);
        animation: none; /* No bump when fully flipped */
    }

    @keyframes bump {
        0% { transform: rotateX(0deg); }
        50% { transform: rotateX(25deg); }
        100% { transform: rotateX(20deg); }
    }

    .face {
        position: absolute;
        width: 100%;
        height: 100%;
        background: #0a0a0a;
        border: 1px solid var(--color-accent-subtle);
        border-radius: 12px;
        padding: 1.5rem;
        box-sizing: border-box;
        text-decoration: none;
        color: inherit;
        display: flex; flex-direction: column; justify-content: space-between;
        
        /* 3D Shadows */
        box-shadow: inset 0 0 40px rgba(0,0,0,0.5);
    }


    /* FRONT FACE */
    .face.front {
        transform: translateZ(0px); /* Front stays "here" */
        border-bottom-color: transparent; /* Remove seam line */
        border-bottom-left-radius: 0;
        border-bottom-right-radius: 0;
    }

    /* BOTTOM FACE (The "Next" one) */
    .face.bottom {
        transform: rotateX(-90deg) translateZ(110px) translateY(110px); 
        /* The translation logic ensures it meets the bottom edge perfectly */
        /* Note: For a true cube, height is 220px, so half is 110px */
        border-color: var(--color-accent);
        border-top-color: transparent; /* Remove seam line */
        border-top-left-radius: 0;
        border-top-right-radius: 0;
        background: #111;
    }

    /* Content Styling */
    .icon-header { display: flex; align-items: center; gap: 0.8rem; color: var(--color-text); margin-bottom: 1rem; }
    .content { flex-grow: 1; display: flex; flex-direction: column; justify-content: center; }

    .activity-meta { display: flex; justify-content: space-between; align-items: baseline; margin-bottom: 1rem; }
    .type-large { font-size: 1.5rem; font-weight: 700; color: #FC4C02; }

    .stat-row { display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; }
    .label { font-size: 0.7rem; display: block; margin-bottom: 0.2rem; color: var(--color-text-muted); }
    .val { font-size: 1.2rem; font-weight: 500; }
    
    .small-content { justify-content: center; align-items: center; text-align: center; }
    .small-stats { display: flex; gap: 0.5rem; justify-content: center; }

    /* Spotify Specifics */
    .spotify .content { flex-direction: row; align-items: center; }
    .center-msg { display: flex; align-items: center; justify-content: center; height: 100%; width: 100%; }
    .art { width: 50px; height: 50px; background: #333; border-radius: 4px; position: relative; overflow: hidden; margin-right: 1rem; }
    .disc { width: 100%; height: 100%; background: conic-gradient(from 0deg, #333, #666); border-radius: 50%; animation: spin 4s linear infinite; }
    @keyframes spin { 100% { transform: rotate(360deg); } }

    .status { margin-top: auto; display: flex; align-items: center; gap: 0.5rem; font-size: 0.75rem; }
    .pulse { width: 6px; height: 6px; border-radius: 50%; animation: pulse 2s infinite; }
    .spotify .pulse { background: #1DB954; box-shadow: 0 0 5px #1DB954; }
    .strava .pulse { background: #FC4C02; box-shadow: 0 0 5px #FC4C02; }

    @keyframes pulse { 0% { opacity: 1; } 50% { opacity: 0.5; } 100% { opacity: 1; } }

    /* Playlist List Styling */
    .spotify-list-face {
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 1rem;
    }

    .playlist-list {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        width: 100%;
        height: 100%;
        overflow-y: auto; /* Scrollable if too many? No, mostly fixed fit */
    }

    .playlist-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.5rem 0.8rem;
        background: rgba(255,255,255,0.05);
        border-radius: 4px;
        text-decoration: none;
        color: var(--color-text-muted);
        transition: all 0.2s ease;
        font-size: 0.85rem;
    }

    .playlist-item:hover {
        background: var(--color-text);
        color: var(--color-bg);
    }
    
    .playlist-item:hover .arr { transform: translateX(2px) translateY(-2px); }
    .arr { transition: transform 0.2s; }

    @media (min-width: 768px) {
        .grid { grid-template-columns: repeat(2, 1fr); }
    }
</style>

<script>
    // Scroll-to-Flip Interaction
    const scenes = document.querySelectorAll('.prism-scene');
    
    scenes.forEach((scene) => {
        const prism = scene.querySelector('.prism');
        
        scene.addEventListener('wheel', (e) => {
            // Check if we can scroll (if user wants to flip)
            e.preventDefault(); // Stop page scroll to allow card interaction
            
            // DeltaY > 0 is scrolling DOWN -> Flip to Show Bottom
            if (e.deltaY > 0) {
                prism.classList.add('flipped');
            } 
            // DeltaY < 0 is scrolling UP -> Return to Front
            else {
                prism.classList.remove('flipped');
            }
        }, { passive: false }); // Passive false required to preventDefault
    });
</script>
