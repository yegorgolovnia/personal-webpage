---
import Layout from "../layouts/Layout.astro";
import Lifestyle from "../components/Lifestyle.astro";
import Hero from "../components/Hero.astro";

// Updated Linktree links
const links = [
    { label: "Twitter", url: "https://twitter.com/yegorgolovnia" },
    { label: "LinkedIn", url: "https://www.linkedin.com/in/yegorgolovnia/" },
    { label: "Telegram", url: "https://t.me/yegorgolovnia" },
    { label: "GitHub", url: "https://github.com/yegorgolovnia" },
];
---

<Layout title="Yegor Golovnia">
    <div class="terminal-container">
        <Hero />

        <div class="spacer"></div>

        <section id="about">
            <div class="header">
                <h2>About</h2>
                <span class="pixel-text">/bio</span>
            </div>
            <p class="bio">
                <strong>Program & Product Lead</strong> // <strong
                    >Operations Specialist</strong
                >
            </p>
            <p class="bio text-muted">
                > Currently leading Quadratic Funding Rounds at Giveth.<br />
                > Building custom LLM workflows and AI agents for business automation.<br
                />
                > Previously co-founded ETHBarcelona (2,500+ attendees).<br />
                > Specializing in Agile Product Management, Grant Writing, and distributed
                orgs.
            </p>
        </section>

        <section id="ai-services">
            <div class="header">
                <h2>Services</h2>
                <span class="pixel-text">/ai</span>
            </div>
            <div class="services-grid">
                <div class="service-card">
                    <h3>AI Automations</h3>
                    <p>
                        Streamlining business processes with custom LLM
                        workflows and agents.
                    </p>
                </div>
                <div class="service-card">
                    <h3>OpenClaw Integration</h3>
                    <p>
                        Setting up and optimizing OpenClaw for rigorous data
                        extraction and automation.
                    </p>
                </div>
            </div>
        </section>

        <!-- Experience and Ventures list -->
        <section id="experience" style="margin-bottom: 4rem;">
            <div class="header">
                <h2>Experience & Ventures</h2>
                <span class="pixel-text">/experience</span>
            </div>
            <ul class="interests-list" style="margin-bottom: 0;">
                <li>
                    <span class="color-accent">></span>
                    <div>
                        <strong>The DAO Fund</strong>
                        <span class="text-muted"
                            >— Ecosystem Support & Allocations</span
                        >
                    </div>
                </li>
                <li>
                    <span class="color-accent">></span>
                    <div>
                        <strong>Giveth</strong>
                        <span class="text-muted">— QF Program Lead</span>
                    </div>
                </li>
                <li>
                    <span class="color-accent">></span>
                    <div>
                        <strong>Coven.Land & MindGem (AI x Web3)</strong>
                        <span class="text-muted">— Co-founder, GTM & Ops</span>
                    </div>
                </li>
                <li>
                    <span class="color-accent">></span>
                    <div>
                        <strong>ETHBarcelona</strong>
                        <span class="text-muted"
                            >— Operations Lead & Co-Organizer</span
                        >
                    </div>
                </li>
                <li>
                    <span class="color-accent">></span>
                    <div>
                        <strong>DoinGud</strong>
                        <span class="text-muted"
                            >— Operations & Partnerships Lead</span
                        >
                    </div>
                </li>
                <li>
                    <span class="color-accent">></span>
                    <div>
                        <strong>FightPandemics</strong>
                        <span class="text-muted">— Operations & HR Lead</span>
                    </div>
                </li>
                <li>
                    <span class="color-accent">></span>
                    <div>
                        <strong>Ecosystem Events</strong>
                        <span class="text-muted"
                            >— Organizer (Function Hackathon, Monero Meetups)</span
                        >
                    </div>
                </li>
            </ul>
        </section>

        <section id="interests">
            <div class="header">
                <h2>Current Tech Interests</h2>
                <span class="pixel-text">/current_interests</span>
            </div>
            <ul class="interests-list">
                <li>
                    <span class="color-accent">></span>
                    <a
                        href="https://github.com/openclaw/openclaw"
                        target="_blank"
                        rel="noopener noreferrer"
                        >OpenClaw (github.com/openclaw/openclaw)</a
                    >
                </li>
                <li>
                    <span class="color-accent">></span>
                    <a
                        href="https://github.com/obra/superpowers"
                        target="_blank"
                        rel="noopener noreferrer"
                        >SuperPowers (github.com/obra/superpowers)</a
                    >
                </li>
            </ul>
        </section>

        <Lifestyle />

        <footer id="contact">
            <div class="header">
                <h2>Contact</h2>
                <span class="pixel-text">/links</span>
            </div>
            <div class="links-grid">
                {
                    links.map((link) => (
                        <a
                            href={link.url}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="link-item"
                        >
                            <span class="arrow">→</span> {link.label}
                        </a>
                    ))
                }
            </div>
            <div class="f-credits mono">
                <p>NO COOKIES. NO TRACKERS.</p>
                <p>&copy; {new Date().getFullYear()} Yegor Golovnia</p>
            </div>
        </footer>
    </div>

    <style>
        .spacer {
            height: 100px;
        }

        #about {
            padding: 4rem 0;
            max-width: 800px;
        }

        .header {
            display: flex;
            align-items: baseline;
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .pixel-text {
            font-family: var(--font-pixel);
            color: var(--color-accent);
            font-size: 0.9rem;
            text-transform: uppercase;
        }

        .bio {
            font-size: 1.5rem;
            line-height: 1.4;
            margin-bottom: 1.5rem;
            font-weight: 300;
        }

        .bio.text-muted {
            color: var(--color-text-muted);
            font-size: 1.1rem;
        }

        footer {
            padding: 6rem 0 4rem 0;
            margin-top: 4rem;
            border-top: 1px solid var(--color-accent-subtle);
        }

        .links-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1rem;
            margin-bottom: 4rem;
        }

        .services-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 1rem;
            margin-bottom: 4rem;
        }

        .interests-list {
            list-style: none;
            padding: 0;
            margin: 0 0 4rem 0;
            display: flex;
            flex-direction: column;
            gap: 0.8rem;
        }

        .interests-list li {
            font-size: 1.1rem;
            display: flex;
            align-items: center;
            gap: 0.8rem;
            padding: 0.5rem 0;
            border-bottom: 1px dashed rgba(255, 255, 255, 0.1);
        }

        @media (min-width: 768px) {
            .services-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        .service-card {
            border: 1px dashed var(--color-accent-subtle);
            padding: 1.5rem;
            border-radius: 4px;
            background: rgba(0, 255, 65, 0.02);
            backdrop-filter: blur(16px);
            -webkit-backdrop-filter: blur(16px);
            transition: all 0.2s ease;
        }

        .service-card:hover {
            border-color: var(--color-accent);
            background: rgba(0, 255, 65, 0.05);
        }

        .service-card h3 {
            font-family: var(--font-pixel);
            color: var(--color-accent);
            font-size: 1.1rem;
            margin-bottom: 0.5rem;
        }

        .link-item {
            font-size: 1.2rem;
            padding: 1rem;
            border: 1px dashed var(--color-accent-subtle);
            border-radius: 4px;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            background: rgba(0, 255, 65, 0.02);
            backdrop-filter: blur(16px);
            -webkit-backdrop-filter: blur(16px);
        }

        .link-item:hover {
            background: rgba(0, 255, 65, 0.05);
            color: var(--color-accent);
            border-color: var(--color-accent);
        }

        .arrow {
            opacity: 0;
            transform: translateX(-5px);
            transition: all 0.2s ease;
        }

        .link-item:hover .arrow {
            opacity: 1;
            transform: translateX(0);
        }

        .f-credits {
            font-size: 0.75rem;
            color: var(--color-text-muted);
            text-align: center;
            opacity: 0.5;
            margin-top: 4rem;
        }

        @media (min-width: 768px) {
            .links-grid {
                grid-template-columns: repeat(3, 1fr);
            }
            .bio {
                font-size: 2rem;
            }
        }
    </style>
</Layout>
